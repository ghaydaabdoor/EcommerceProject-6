@model ECommerce.Models.User

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<link href="~/Content/css/loginpage.css" rel="stylesheet">
<style>
    .signup-page {
        height: 75vh;
    }
</style>

@using (Html.BeginForm("Login", "Users", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="signup-page">
        <main>
            <div class="signup-block">
                <h2>Login</h2>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <div class="input-container">
                        <i class="fa fa-user"></i>
                        <input class="form-control" type="email" name="email" placeholder="Enter your email" value=@Session["currentEmail"] />
                    </div>
                    @if (ViewBag.EmailError != null)
                    {
                        <div class="form-group text-danger">
                            @ViewBag.EmailError
                        </div>
                    }
                </div>

                <div class="form-group">
                    <div class="input-container">
                        <i class="fa fa-lock"></i>
                        <input class="form-control" type="password" name="password" placeholder="Enter password" />
                    </div>
                    @if (ViewBag.PasswordError != null)
                    {
                        <div class="form-group text-danger">
                            @ViewBag.PasswordError
                        </div>
                    }
                </div>

                <button class="btn btn-primary btn-block" type="submit">Login</button>
            </div>
        </main>
    </div>
}

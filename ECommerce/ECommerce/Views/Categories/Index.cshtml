@model IEnumerable<ECommerce.Models.Category>

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<!-- Carousel Start -->
<div class="container-fluid header-carousel px-0 mb-5" style="height: 700px;">
    <div id="header-carousel" class="carousel slide carousel-fade" data-bs-ride="carousel" style="height: 100%;">
        <div class="carousel-inner" style="height: 100%;">
            <!-- Slide 1 -->
            <div class="carousel-item active" style="height: 100%;">
                <img class="w-100" src="~/Content/img/bg1.jpg" alt="Image" style="height: 100%; object-fit: cover;">
                <div class="carousel-caption">
                    <div class="container">
                        <div class="row justify-content-start">
                            <div class="col-lg-7 text-start">
                                <h1 class="display-1 text-white animated slideInRight mb-3">Top-Quality Medical Supplies</h1>
                                <p class="mb-5 animated slideInRight">
                                    Explore a wide range of medical devices and supplies, from blood pressure monitors to emergency kits. Trusted by professionals for their quality and reliability.
                                </p>
                                <a href="" class="btn btn-primary py-3 px-5 animated slideInRight">Shop Now</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Slide 2 -->
            <div class="carousel-item" style="height: 100%;">
                <img class="w-100" src="~/Content/img/bg2.jpg" alt="Image" style="height: 100%; object-fit: cover;">
                <div class="carousel-caption">
                    <div class="container">
                        <div class="row justify-content-end">
                            <div class="col-lg-7 text-end">
                                <h1 class="display-1 text-white animated slideInLeft mb-3">Essential Devices for Every Home</h1>
                                <p class="mb-5 animated slideInLeft">
                                    Ensure your family’s health and safety with our essential medical devices, including glucose meters, first aid kits, and more. Equip your home with the best.
                                </p>
                                <a href="" class="btn btn-primary py-3 px-5 animated slideInLeft">View Products</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#header-carousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#header-carousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>
<!-- Carousel End -->
<!-- Categories Start -->
<div class="container-fluid py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h1 class="display-6 mb-5">Explore Our Product Categories</h1>
        </div>
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="card h-100">
                        <img class="card-img-top" src="@Html.DisplayFor(modelItem => item.ImageUrl)" alt="@Html.DisplayFor(modelItem => item.CategoryName)">
                        <div class="card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.CategoryName)</h5>
                            <p class="card-text">@Html.DisplayFor(modelItem => item.CategoryDescr)</p>
                            <a href="@Url.Action("Index", "Products", new { id = item.CategoryId })" class="btn btn-primary">View Products</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Categories End -->
<!-- About Start -->
<div class="container-fluid py-5">
    <div class="container">
        <div class="row g-5 align-items-center">
            <div class="col-lg-6">
                <img class="img-fluid" src="~/Content/img/aboutPic.jpg" alt="Medical Supplies">
            </div>
            <div class="col-lg-6">
                <h1 class="display-6 mb-4">Your Trusted Source for Medical Supplies</h1>
                <p class="mb-4">We provide a wide range of high-quality medical supplies to meet your healthcare needs. Whether you're looking for diagnostic devices, therapeutic equipment, or emergency kits, we've got you covered with reliable products that healthcare professionals trust.</p>
                <p class="mb-4">With years of experience in the medical supply industry, we are committed to offering the best products and services to our customers. Shop with confidence, knowing that your health and safety are our top priorities.</p>
                <a href="~/Content/img/aboutPic.jpg" class="btn btn-primary py-2 px-4">Learn More</a>
            </div>
        </div>
    </div>
</div>
<!-- About End -->
<!-- Service Start -->
<div class="container-fluid container-service py-5">
    <div class="container pt-5">
        <div class="text-center mx-auto wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
            <h1 class="display-6 mb-3">Reliable & High-Quality Medical Supplies</h1>
            <p class="mb-5">Explore our range of top-quality medical supplies, designed to meet all your healthcare needs with unmatched reliability and efficiency.</p>
        </div>
        <div class="row g-4">
            <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                <div class="service-item">
                    <div class="icon-box-primary mb-4">
                        <i class="bi bi-heart-pulse text-dark"></i>
                    </div>
                    <h5 class="mb-3">
                        24/7 Customer Support
                    </h5>
                    <p class="mb-4">We're here to help you anytime with dedicated customer support for all your inquiries and orders.</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.3s">
                <div class="service-item">
                    <div class="icon-box-primary mb-4">
                        <i class="bi bi-wallet2 text-dark"></i>
                    </div>
                    <h5 class="mb-3">
                        Competitive Prices
                    </h5>
                    <p class="mb-4">Get the best value for your money with our fair and competitive pricing on all medical supplies.</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.5s">
                <div class="service-item">
                    <div class="icon-box-primary mb-4">
                        <i class="bi bi-shield-check text-dark"></i>
                    </div>
                    <h5 class="mb-3">
                        Quality Assurance
                    </h5>
                    <p class="mb-4">All our products are rigorously tested and certified to ensure they meet the highest quality standards.</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.7s">
                <div class="service-item">
                    <div class="icon-box-primary mb-4">
                        <i class="bi bi-truck text-dark"></i>
                    </div>
                    <h5 class="mb-3">
                        Fast & Secure Shipping
                    </h5>
                    <p class="mb-4">Enjoy fast and reliable shipping with our secure delivery services, ensuring your products reach you on time.</p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Service End -->
<!-- Contact Us Start -->
<div class="container-fluid py-5">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s">
                <h1 class="display-6 mb-4">We Value Your Feedback and Inquiries</h1>
                <p>Your thoughts, suggestions, and questions are important to us. Whether you have a comment about our products or need assistance, we’re here to help.</p>
                <p class="mb-4">Feel free to reach out at any time, and we’ll get back to you as soon as possible.</p>
                <div class="d-flex align-items-start wow fadeIn" data-wow-delay="0.3s">
                    <div class="icon-box-primary">
                        <i class="bi bi-geo-alt text-dark fs-1"></i>
                    </div>
                    <div class="ms-3">
                        <h5>Office Address</h5>
                        <span>Amman, Jordan</span>
                    </div>
                </div>
                <hr>
                <div class="d-flex align-items-start wow fadeIn" data-wow-delay="0.4s">
                    <div class="icon-box-primary">
                        <i class="bi bi-clock text-dark fs-1"></i>
                    </div>
                    <div class="ms-3">
                        <h5>Working Hours</h5>
                        <span>Sat-Thu 09am-5pm, Fri Closed</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.5s">
                <h2 class="mb-4">Send Us Your Comments or Suggestions</h2>
                <div class="row g-3">
                    <div class="col-sm-6">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="name" placeholder="Your Name">
                            <label for="name">Your Name</label>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-floating">
                            <input type="email" class="form-control" id="mail" placeholder="Your Email">
                            <label for="mail">Your Email</label>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="mobile" placeholder="Your Phone">
                            <label for="mobile">Your Phone</label>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-floating">
                            <select class="form-select" id="category">
                                <option selected>General Inquiry</option>
                                <option value="">Product Feedback</option>
                                <option value="">Order Support</option>
                                <option value="">Other</option>
                            </select>
                            <label for="category">Select a Category</label>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-floating">
                            <textarea class="form-control" placeholder="Leave a message here" id="message"
                                      style="height: 130px"></textarea>
                            <label for="message">Message</label>
                        </div>
                    </div>
                    <div class="col-12 text-center">
                        <button class="btn btn-primary w-100 py-3" type="submit">Submit</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Contact Us End -->
